{
  "name": "Mnist_LeNet",
  "n_gpu": 1,
  "arch": {
    "type": "MnistModel",
    "args": {}
  },
  "data_loader": {
    "type": "LanguageDataLoader",
    "iterator": true,
    "args": {
      "data_dir": "data/multi30k",
      "batch_sizes": "(128, 128, 1)"
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "nll_loss",
  "metrics": [
    "accuracy",
    "top_k_acc"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
